    <script>
        // Size selection
        document.querySelectorAll('.size-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                this.parentNode.querySelectorAll('.size-btn').forEach(b => b.classList.remove('active'));
                this.classList.add('active');
            });
        });

        // Color selection
        document.querySelectorAll('.color-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                this.parentNode.querySelectorAll('.color-btn').forEach(b => b.classList.remove('active'));
                this.classList.add('active');
            });
        });

        // Add to bag functionality
        document.querySelectorAll('.btn-fashion').forEach(btn => {
            btn.addEventListener('click', function() {
                this.innerHTML = '<i class="bi bi-check2 me-2"></i>Added to Bag!';
                this.style.background = '#27ae60';
                setTimeout(() => {
                    this.innerHTML = '<i class="bi bi-bag-plus me-2"></i>Add to Bag';
                    this.style.background = '';
                }, 2500);
            });
        });
