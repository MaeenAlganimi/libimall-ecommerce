        .hero-title {
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: 1rem;
        }
        
        .fashion-grid {
            padding: 3rem 0;
        }
        
        .fashion-card {
            background: white;
            border-radius: 20px;
            overflow: hidden;
            transition: all 0.3s ease;
            box-shadow: 0 5px 20px rgba(0,0,0,0.08);
            margin-bottom: 2rem;
            position: relative;
        }
        
        .fashion-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.15);
        }
        
        .fashion-image {
            width: 100%;
            height: 350px;
            object-fit: cover;
            transition: transform 0.3s ease;
        }
        
        .fashion-card:hover .fashion-image {
            transform: scale(1.05);
        }
        
        .fashion-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(to bottom, transparent 60%, rgba(0,0,0,0.8));
            opacity: 0;
            transition: opacity 0.3s ease;
        }
        
        .fashion-card:hover .fashion-overlay {
            opacity: 1;
        }
        
        .fashion-info {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            padding: 1.5rem;
            color: white;
            transform: translateY(100%);
            transition: transform 0.3s ease;
        }
        
        .fashion-card:hover .fashion-info {
            transform: translateY(0);
        }
        
        .fashion-body {
            padding: 1.5rem;
        }
        
        .fashion-category {
            color: #ff6b6b;
            font-size: 0.85rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        
        .fashion-title {
            font-size: 1.2rem;
            font-weight: 600;
            color: #2c3e50;
            margin: 0.5rem 0;
        }
        
        .fashion-price {
            font-size: 1.4rem;
            font-weight: 700;
            color: #e74c3c;
            margin: 0.5rem 0;
        }
        
        .size-options {
            margin: 1rem 0;
        }
        
        .size-btn {
            width: 35px;
            height: 35px;
            border: 2px solid #e9ecef;
            background: white;
            border-radius: 50%;
            margin-right: 0.5rem;
            font-size: 0.9rem;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        
        .size-btn:hover,
        .size-btn.active {
            border-color: #ff6b6b;
            background: #ff6b6b;
            color: white;
        }
        
        .color-options {
            margin: 1rem 0;
        }
        
        .color-btn {
            width: 30px;
            height: 30px;
            border: 3px solid transparent;
            border-radius: 50%;
            margin-right: 0.5rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .color-btn:hover,
        .color-btn.active {
            border-color: #2c3e50;
            transform: scale(1.1);
        }
        
        .btn-fashion {
            background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
            border: none;
            color: white;
            padding: 0.8rem 2rem;
            border-radius: 25px;
            font-weight: 600;
            transition: all 0.3s ease;
